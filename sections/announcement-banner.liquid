{{ 'section-announcement-banner.css' | asset_url | stylesheet_tag }}

<div>
  {%- if section.blocks.size == 0 -%}
    <p>No Banners</p>
  {%- elsif section.blocks.size == 1 -%}
    <div class="globalBannerWrapper">
      <div class="globalBannerInner">
        {%- if section.blocks.first.settings.link != blank -%}
          <a href="{{ section.blocks.first.settings.link }}">
        {%- endif -%}
          {%- if section.blocks.first.settings.image -%}
            {{ section.blocks.first.settings.image | image_url: width: 980 | image_tag }}
          {%- else -%}
            <img src="{{ 'default-leaderboard.png' | asset_img_url: 'original' }}" alt="Default Leader Board">
          {%- endif -%}
        {%- if section.blocks.first.settings.link != blank -%}
           </a>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.announcement-banner.name",
  "class": "announcement-banner-section",
  "blocks": [
    {
      "type": "banner",
      "name": "t:sections.announcement-banner.blocks.banner.name",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"  
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-banner.presets.name",
      "blocks": [
        {
          "type": "banner"
        }
      ]
    }
  ]
}
{% endschema %}